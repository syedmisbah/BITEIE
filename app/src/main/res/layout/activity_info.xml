<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bit.biteie.InfoActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:text="DEVELOPERS"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/buttoncolordark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/buttoncolordark"
        android:text="About the Department" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/buttoncolordark"
        android:onClick="shareText"
        android:text="Share" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:weightSum="2">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#7fc6b2b2"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/devimg2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dev1" />

                    <TextView
                        android:id="@+id/nameDev2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/devimg2"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/devimg2"
                        android:text="Syed Misbah Ahmed"
                        android:textColor="@color/toolbarcolor"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/DeptDev2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/college2"
                        android:layout_alignStart="@+id/nameDev2"
                        android:layout_centerHorizontal="false"
                        android:text="Dept. of Elec. and Inst."
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/college2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/devimg2"
                        android:layout_alignStart="@+id/nameDev2"
                        android:text="Bangalore Institute of Technology"
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/phdev2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/devimg2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:autoLink="phone"
                        android:text="Phone: +91 9066665419"
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/websitedev2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_below="@+id/phdev2"
                        android:layout_marginLeft="10dp"
                        android:autoLink="web"
                        android:text="Website: syedmisbah.github.io"
                        android:textColor="@color/toolbarcolor" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#7fc6b2b2"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/devimg1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dev2" />

                    <TextView
                        android:id="@+id/nameDev1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/devimg1"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/devimg1"
                        android:text="Sarfraz Ahmed"
                        android:textColor="@color/toolbarcolor"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/DeptDev1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/college1"
                        android:layout_alignStart="@+id/nameDev1"
                        android:layout_centerHorizontal="false"
                        android:text="Dept. of Information Science "
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/college1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/devimg1"
                        android:layout_alignStart="@+id/nameDev1"
                        android:text="Bangalore Institute of Technology"
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/phdev1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/devimg1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:autoLink="phone"
                        android:text="Phone: +91 7631510420"
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/websitedev1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_below="@+id/phdev1"
                        android:layout_marginLeft="10dp"
                        android:autoLink="web"
                        android:text="Website: sarfrazahmed.github.io"
                        android:textColor="@color/toolbarcolor" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
