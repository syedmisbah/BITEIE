                android:layout_margin="10dp"
                app:cardBackgroundColor="#7fc6b2b2"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/rel3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/devimg3"
