                        android:layout_height="wrap_content"
                        android:layout_above="@+id/college3"
                        android:layout_alignStart="@+id/nameDev3"
                        android:layout_centerHorizontal="false"
                        android:text="Dept. of Elec. and Inst."
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/college3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/devimg3"
                        android:layout_alignStart="@+id/nameDev3"
                        android:text="Bangalore Institute of Technology"
                        android:textColor="@color/toolbarcolor" />

                    <TextView
                        android:id="@+id/phdev3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/devimg3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:autoLink="phone"
                        android:text="Phone: +91 9035810481"
                        android:textColor="@color/toolbarcolor" />

                    <TextView
